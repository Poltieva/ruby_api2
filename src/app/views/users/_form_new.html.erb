<%= form_with model: @user do |form| %>
<div>
  <%= form.label :fname %><br>
  <%= form.text_field :fname %>
  <% @user.errors.full_messages_for(:fname).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :lname %><br>
  <%= form.text_field :lname %>
  <% @user.errors.full_messages_for(:lname).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :ysalary %><br>
  <%= form.number_field :ysalary %>
  <% @user.errors.full_messages_for(:ysalary).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.submit %>
</div>
<% end %>
